<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:background="@android:color/white"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/video_item_userimage"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:roundAsCircle="true"
            />
        <TextView
            android:id="@+id/video_item_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="昵称"
            android:gravity="center"
            android:textSize="18sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/video_item_userimage"
            />
        <ImageView
            android:id="@+id/video_item_hot"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/hot_commenticon_textpage_pressed"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/video_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <SurfaceView
            android:id="@+id/video_item_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/video_item_pic"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            />

        <ProgressBar
            android:id="@+id/video_item_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.ProgressBar"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/video_item_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_media_play"
            />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/video_item_content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好笑 555 评论 222 分享 222 再生 222"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/video_item_imagefun"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_funny_normal"
            />
        <ImageView
            android:id="@+id/video_item_imagenotfun"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_audit_unfunny_pressed"
            />
        <ImageView
            android:id="@+id/video_item_imagecomment"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_comment_pressed"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/video_item_imageshare"
                android:layout_width="45dp"
                android:layout_gravity="right"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_html_share"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>